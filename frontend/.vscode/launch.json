{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**",
                "${workspaceFolder}/dist/**"
            ],
            "sourceMaps": true,
            "smartStep": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceFolder}/*"
            }
        }
    ]
}